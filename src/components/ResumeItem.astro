---
interface Props {
  period: string;
  company: string;
  position: string;
  responsibilities: string[];
}

const { period, company, position, responsibilities } = Astro.props;
---

<div class="border-b border-gray-200 py-6 px-4 even:bg-slate-50">
  <div class="mb-4">
    <h3 class="font-semibold text-xl text-gray-800">{period}</h3>
    <p class="text-gray-600">{company}</p>
    <p class="text-gray-600 italic">{position}</p>
  </div>
  <div>
    <h4 class="text-lg font-semibold text-gray-800">主な業務内容</h4>
    <ul class="mt-3 space-y-2 list-disc list-inside text-gray-700">
      {responsibilities.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </div>
</div>
