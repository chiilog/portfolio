---
import { Icon } from "astro-icon/components";
const { src } = Astro.props;
---

<section class="relative bg-gray-800 h-screen">
  <div class="absolute inset-0">
    <img
      src={src}
      alt="Hero Image"
      class="w-full h-full object-cover object-top"
    />
    <div class="absolute inset-0 bg-red-300 opacity-30"></div>
  </div>
  <div
    class="relative
           flex
           flex-col
           items-center
           justify-center
           h-full
           max-w-7xl
           mx-auto
           py-24
           px-6
           text-center"
  >
    <slot />

    <div class="absolute bottom-10 left-0 right-0 text-center">
      <div class="flex flex-col items-center">
        <p class="font-quicksand text-white">Scroll down</p>
        <div class="text-white">
          <Icon name="arrow-down" width="24" height="24" />
        </div>
      </div>
    </div>
  </div>
</section>
